<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/push_status_log" android:background="#f2ffffff" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:gravity="center_vertical" android:id="@+id/close_relative" android:layout_width="match_parent" android:layout_height="60dp">
        <TextView android:textColor="@android:color/white" android:gravity="center" android:id="@+id/clear" android:background="@drawable/shape_oval_black" android:visibility="gone" android:layout_width="60dp" android:layout_height="40dp" android:layout_marginLeft="20dp" android:text="clear"/>
        <TextView android:textColor="@android:color/white" android:gravity="center" android:id="@+id/close" android:background="@drawable/background_oval" android:layout_width="40dp" android:layout_height="40dp" android:text="X" android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/close_relative">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="14sp" android:textColor="@android:color/holo_red_light" android:gravity="center_vertical" android:id="@+id/text" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Empty"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
